<Window x:Class="Task4GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:vm="clr-namespace:Task4GUIViewModel;assembly=Task4GUIViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ViewModel/>
    </Window.DataContext>


    <StackPanel>
        <Label Content="Locations:" FontSize="17" FontWeight="Bold" Margin="8,0,8,0"/>
        <Grid Height="384">
            <Button Content="Add" HorizontalAlignment="Left" Margin="38,17,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.538,0.858"/>
            <Button Content="Update" HorizontalAlignment="Left" Margin="38,92,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Show Details" HorizontalAlignment="Left" Margin="38,163,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1.733,-2.198"/>
            <Button Content="Delete" HorizontalAlignment="Left" Margin="38,232,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.539,3.534"/>
            <Button Content="Reload" HorizontalAlignment="Left" Margin="38,310,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-4.102,0.821"/>
            <ListBox HorizontalAlignment="Left" Height="313" Margin="167,17,0,0" VerticalAlignment="Top" Width="603" ItemsSource="{Binding Locations}" SelectedItem="{Binding Location}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}" Width="250"/>
                            <TextBlock Text="{Binding CostRate}" Width="250"/>
                            <TextBlock Text="{Binding Availability}" Width="250"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

    </StackPanel>

</Window>
